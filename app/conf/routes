# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

# Rankings
PUT         /rankings/:ranking            com.plyrhub.ranking.front.controller.RankingController.create(ranking:String)
GET         /rankings/:ranking            com.plyrhub.ranking.front.controller.RankingController.query(ranking:String)


# Members
PUT         /members/:member              com.plyrhub.ranking.front.controller.MemberController.registrateMember(member:String)
POST        /members/:member/score        com.plyrhub.ranking.front.controller.MemberController.score(member:String)


GET         /assets/*file                 controllers.Assets.at(path="/public", file)
